{
  "name": "novabook-tax-service",
  "version": "1.0.1",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "docker:build": "docker build -t novabook-tax-service .",
    "docker:run": "docker run -d -p 3000:3000 --name novabook-container novabook-tax-service sh -c 'npm run migration:run && npm run start'",
    "docker:restart": "npm run docker:stop && npm run docker:remove && npm run docker:build && npm run docker:run && npm run docker:logs",
    "docker:stop": "docker stop novabook-container || true",
    "docker:remove": "docker rm novabook-container || true",
    "docker:logs": "docker logs -f novabook-container",
    "migration:run": "typeorm migration:run -d ./dist/src/dataSource.js",
    "migration:revert": "typeorm migration:revert -d ./dist/src/dataSource.js",
    "migration:show": "typeorm migration:show -d ./dist/src/dataSource.js",
    "migration:generate": "typeorm migration:generate -d ./dist/src/dataSource.ts",
    "migration:create": "typeorm migration:create ./src/database/migrations/{name}",
    "restart": "npm run migration:revert && rm -rf ./novabook.sqlite && rm -rf dist && npm run build && npm run migration:run && npm run start:dev",
    "setup": "npm install && npm run build && npm run migration:run && npm run start:dev",
    "start": "npm run migration:run && node dist/src/main.js",
    "start:dev": "nest start --watch",
    "test": "npx jest --config jest.config.ts",
    "typeorm": "typeorm-ts-node-esm -d ./dist/dataSource.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/swagger": "^8.1.1",
    "@nestjs/typeorm": "^10.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.11.10",
    "jest": "^29.7.0",
    "sqlite3": "^5.1.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
